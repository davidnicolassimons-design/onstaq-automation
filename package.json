{
  "name": "onstaq-automations",
  "version": "1.0.0",
  "description": "Automation engine for ONSTAQ - triggers, conditions, and actions for workflow automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "tsx watch src/index.ts",
    "start": "prisma migrate deploy && node dist/index.js",
    "start:mcp": "node dist/mcp/stdio.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@prisma/client": "^6.5.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.0",
    "@types/uuid": "^10.0.0",
    "prisma": "^6.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
